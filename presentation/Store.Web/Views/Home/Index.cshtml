    <style>.slider {
    max-width: 90%;
    position: relative;
    margin: auto;
    height: 300px;
}

    .slider .item img {
        object-fit: cover;
        width: 100%;
        height: 300px;
    }

    /* Кнопки назад и вперёд: */
    .slider .previous, .slider .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: white;
        font-weight: bold;
        font-size: 16px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
    }

    .slider .next {
        right: 0;
        border-radius: 3px 0 0 3px;
    }

        /* При наведении курсора на кнопки добавляем фон кнопок: */
        .slider .previous:hover,
        .slider .next:hover {
            background-color: rgba(0, 0, 0, 0.2);
        }

    /* Анимация слайдов: */
    .slider .item {
        animation-name: fade;
        animation-duration: 1.5s;
    }

 fade {
    /* Устанавливаем и изменяем степень прозрачности: */
    from {
        opacity: 0.4
    }

    to {
        opacity: 1
    }
}</style>
